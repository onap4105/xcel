{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "autosize": {"type": "none", "resize": true},
  "width": 2000,
  "height": 60,
  "padding": 0,
  "background": "transparent",
  
  "signals": [
    {
      "name": "containerWidth",
      "update": "width"
    },
    {
      "name": "verticalCenter",
      "update": "height / 2"
    }
  ],

  "data": [
    {
      "name": "label",
      "values": [
        {
          "label": "ELNAS Event Report",
          "color": "#00A8E0",
          "url": "https://nsas-pst-01-kibana.nsas.cnx.tnet.att.com/s/elnas/app/dashboards#/view/3a6a0446-a19e-489a-bb59-7485b2e10a87"
        }
      ]
    }
  ],

  "marks": [
    {
      "type": "rect",
      "encode": {
        "enter": {
          "x": {"value": 0},
          "y": {"value": 0},
          "fill": {"value": "#00A8E0"},
          "cornerRadius": {"value": 0},
          "cursor": {"value": "auto"}  // Default cursor for non-clickable area
        },
        "update": {
          "width": {"signal": "containerWidth"},
          "height": {"signal": "height"}
        }
      }
    },
    {
      "type": "text",
      "encode": {
        "enter": {
          "x": {"value": 20},
          "text": {"value": "ELNAS Event Report"},
          "fill": {"value": "white"},
          "align": {"value": "left"},
          "baseline": {"value": "middle"},
          "fontWeight": {"value": "bold"},
          "fontSize": {"value": 16},
          "cursor": {"value": "pointer"}  // Pointer only on text
        },
        "update": {
          "y": {"signal": "verticalCenter"}
        },
        "hover": {
          "fill": {"value": "#FFFF00"}  // Yellow hover effect on text only
        }
      },
      "events": {
        "click": {
          "update": "{href: 'https://nsas-pst-01-kibana.nsas.cnx.tnet.att.com/s/elnas/app/dashboards#/view/3a6a0446-a19e-489a-bb59-7485b2e10a87', target: '_self'}"
        }
      }
    }
  ]
}
